<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planner">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar6"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#B5BF3C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuBurger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_burgermenu"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar6"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar6"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/imgdlogo"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar6"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar6"
        app:srcCompat="@drawable/imglogo" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar7"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/btnScan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-50dp"
        android:contentDescription="@string/btncamerabg"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar7"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar7"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar7"
        app:srcCompat="@drawable/imgcircle"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="@string/btncameralogo"
        app:layout_constraintBottom_toBottomOf="@+id/btnScan"
        app:layout_constraintEnd_toEndOf="@+id/btnScan"
        app:layout_constraintStart_toStartOf="@+id/btnScan"
        app:layout_constraintTop_toTopOf="@+id/btnScan"
        app:layout_constraintVertical_bias="0.468"
        app:srcCompat="@drawable/ic_camera"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_dashboard"
        android:padding="2dp"
        android:text="@string/dashboard"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="normal"
        app:iconPadding="0dp"
        app:iconSize="64dp"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar7"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar7" />

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_calendar"
        android:padding="2dp"
        android:text="@string/progress"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="normal"
        app:iconPadding="0dp"
        app:iconSize="64dp"
        app:layout_constraintStart_toEndOf="@+id/btnDashboard"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar7" />

    <Button
        android:id="@+id/btnPlanner"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_planner"
        android:padding="2dp"
        android:text="@string/planner"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="normal"
        app:iconPadding="0dp"
        app:iconSize="64dp"
        app:layout_constraintEnd_toStartOf="@+id/btnProfile"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar7" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_acc"
        android:padding="2dp"
        android:text="@string/profile"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="normal"
        app:iconPadding="0dp"
        app:iconSize="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar7" />

</androidx.constraintlayout.widget.ConstraintLayout>